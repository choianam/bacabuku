<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BahasaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_weight="2"
                        android:layout_marginBottom="20dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.example.bacabuku._sliders.SliderView
                                android:id="@+id/sliderView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </FrameLayout>
                        <TextView
                            android:text="BAHASA"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_indicator"/>
                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <FrameLayout android:layout_width="205dp"
                        android:layout_height="330dp"
                        android:background="@drawable/rectangle_barang"
                        tools:context=".BtmmenuHome">

                        <Button
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="280dp"
                            android:text="BACA"
                            android:textColor="#FFFFFF"
                            android:background="@color/colorPrimary"
                            android:id="@+id/toBarang"/>

                        <ImageView
                            android:id="@+id/gambarBarang"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            app:srcCompat="@android:drawable/ic_menu_gallery" />

                        <TextView
                            android:id="@+id/namaBarang"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="140dp"
                            android:gravity="center_horizontal"
                            android:text="Judul"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/namaJenis"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="185dp"
                            android:layout_marginLeft="20dp"
                            android:text="Kategori"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/penulis"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="210dp"
                            android:layout_marginLeft="20dp"
                            android:text="Yongki Ariwibowo"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tahunterbit"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="245dp"
                            android:layout_marginLeft="20dp"
                            android:text="2010"
                            android:textSize="17dp" />

                    </FrameLayout>

                </TableRow>


            </TableLayout>

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>