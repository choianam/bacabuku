<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UmumActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:textSize="23dp"
                    android:text="UMUM"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_indicator"/>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false">

                    <FrameLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="400dp"
                        android:layout_height="330dp"
                        android:background="@drawable/rectangle_barang"
                        tools:context=".BtmmenuHome">

                        <Button
                            android:id="@+id/toBarang"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="280dp"
                            android:background="@color/colorPrimary"
                            android:text="BACA"
                            android:textColor="#FFFFFF" />

                        <ImageView
                            android:n
                            android:id="@+id/gambarBarang"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@drawable/nov" />

                        <TextView
                            android:id="@+id/namaBarang"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="140dp"
                            android:gravity="center_horizontal"
                            android:text="Mahasiswa Koplak"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/namaJenis"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="165dp"
                            android:layout_marginTop="185dp"
                            android:text="Kategori"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/penulis"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="210dp"
                            android:text="Yongki Ariwibowo"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tahunterbit"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginLeft="175dp"
                            android:layout_marginTop="245dp"
                            android:text="2010"
                            android:textSize="17dp" />

                    </FrameLayout>

                </TableRow>
                <TableRow
                    android:layout_marginTop="10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false">

                    <FrameLayout
                        android:layout_width="205dp"
                        android:layout_height="330dp"
                        android:background="@drawable/rectangle_barang"
                        tools:context=".BtmmenuHome">

                        <Button
                            android:id="@+id/toBarang"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="280dp"
                            android:background="@color/colorPrimary"
                            android:text="BACA"
                            android:textColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/gambarBarang"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:src="@drawable/no" />

                        <TextView
                            android:id="@+id/namaBarang"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="140dp"
                            android:gravity="center_horizontal"
                            android:text="Super Complite IPS"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/namaJenis"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="165dp"
                            android:layout_marginTop="185dp"
                            android:text="Kategori"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/penulis"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="145dp"
                            android:layout_marginTop="210dp"
                            android:text="Erwin Gutawa "
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tahunterbit"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginLeft="170dp"
                            android:layout_marginTop="245dp"
                            android:text="2013"
                            android:textSize="17dp" />

                    </FrameLayout>

                </TableRow>


            </TableLayout>

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>